{
	"name": "rustic",
	"version": "0.0.0",
	"description": "A package providing Rust types and helpers for Typescript",
	"main": "dist/bundle.js",
	"types": "dist/bundle.d.ts",
	"scripts": {
		"watch": "webpack -w --mode development --progress -c webpack.config.dev.js",
		"build": "webpack --mode production --progress -c webpack.config.prod.js",
		"lint": "tslint -p tsconfig.json",
		"doc": "typedoc src",
		"prepublishOnly": "rm dist -rf && npm run build",
		"test": "jest --config jestconfig.json",
		"test-watch": "jest --watch --config jestconfig.json",
		"coverage": "jest --coverage --config jestconfig.json"
	},
	"keywords": [
		"rust",
		"rust types",
		"rust helpers",
		"rustic"
	],
	"author": "franeklubi",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^26.0.24",
		"clean-terminal-webpack-plugin": "^3.0.0",
		"jest": "^27.0.6",
		"terser-webpack-plugin": "^5.1.4",
		"ts-loader": "^9.2.4",
		"typedoc": "^0.21.4",
		"typescript": "^4.3.5",
		"webpack": "^5.47.1",
		"webpack-cli": "^4.7.2"
	},
	"files": [
		"dist/**/*"
	]
}
